{% extends 'base.html.twig' %}


{% block body %}

    {% for message in app.flashes('bestell') %}
        <div class="alert alert-success">
            <h3>{{ message }}</h3>
        </div>
    {% endfor %}

    <!-- Playlist section -->
    <section class="playlist-section spad">
        <div class="container-fluid">
            <div class="section-title">
                <h2>Men√ºKarte</h2>
            </div>
            <div class="container">
                <ul class="playlist-filter controls">
                    <li class="control" data-filter=".Getrank">Getranke</li>
                    <li class="control" data-filter=".Vorspeise">Vorspeisen</li>
                    <li class="control" data-filter=".Hauptspeise">Hauptspeise</li>
                    <li class="control" data-filter=".Nachspeise">Nachspeisen</li>
                    <li class="control" data-filter="all">Alle Gerichte</li>
                </ul>
            </div>
            <div class="clearfix"></div>
            <div class="row playlist-area">
                {% for gericht in gerichte %}
                <div class="mix col-lg-3 col-md-4 col-sm-6 {{ gericht.kategorie }}">
                    <div class="playlist-item">
                        <img src="{{ asset('bilder/'~ gericht.bild) }}" alt="">
                        <h5>{{ gericht.beschreibung }} - Eur {{ gericht.preis }}</h5>
                        <p>BestNr. {{ gericht.id }}</p>
                        <a href="{{ path('bestellen',{id:gericht.id}) }}" class="btn btn-outline-danger btn-sm">Bestellen</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- Playlist section end -->
{% endblock %}
